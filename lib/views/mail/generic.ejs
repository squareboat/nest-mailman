<mjml>

  <mj-head>
    <mj-style>

      #outlook a {
        padding: 0;
        }
  
        body {
        margin: 0;
        padding: 0;
        -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
        font-family: 'Roboto', sans-serif;
  
        }
  
        table,
        td {
        border-collapse: collapse;
        mso-table-lspace: 0pt;
        mso-table-rspace: 0pt;
        }
  
        img {
        border: 0;
        height: auto;
        line-height: 100%;
        outline: none;
        text-decoration: none;
        -ms-interpolation-mode: bicubic;
        }
  
        p {
        display: block;
        margin: 8px 0;
        }
  
        .table {
        border: 1px solid #f2f2f2;
        padding: 0 !important;
        box-shadow: 0px 0px 5px 0px #E5E7EB
        ;
        -webkit-box-shadow: 0px 0px 5px 0px #E5E7EB
        ;
        -moz-box-shadow: 0px 0px 5px 0px #E5E7EB
        ;
        overflow-x: scroll;
        max-width: 300px;
        }
  
        .table tr {
        padding: 0;
        border-bottom: 1px solid rgba(229,231,235);
        }
        .table th {
        background: #F3F4F6;
        text-transform: uppercase;
        padding: 12px 24px;
        color: rgba(107,114,128);
        font-weight: normal;
        }
  
        .table td {
        padding: 12px 24px;
        color: #111827;
        min-width: 80px;
        }
  
  </mj-style>
  <mj-attributes>

    <mj-class name="greeting" color="#111827" font-size="16px" padding-bottom="0" />
    <mj-class name="line" color="#6b7280" font-size="16px" line-height="20px"/>
    <mj-class name="action" font-size="14px" background-color="#1D4ED8" />
    <mj-class name="action-primary" background-color="#1D4ED8" />
    <mj-class name="action-secondary" background-color="#EFF6FF" color="#1D4ED8" />
    <mj-class name="action-link" background-color="transparent" color="#1D4ED8" padding="0"/>
    <mj-class name="action-outline" background-color="transparent" border="1px solid #1D4ED8" color="#1D4ED8"  />
    <mj-class name="action-fallback" border="1px solid #1D4ED8" font-size="12px" line-height="20px" />
    <mj-section padding-left="24px" padding-right="24px" padding-bottom="8px" padding-top="8px" />

  </mj-attributes>

    <mj-font name="Roboto"
         href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" />
  </mj-head>
      
      <mj-body>

                      <% genericFields.forEach(function(field){ %>
                         <% if (field.line) { %> 
                          <%- include('./components/line.ejs', {text: field.line}); -%> 
                        <% } else if(field.greeting) { %>
                          <%- include('./components/greeting.ejs', {text: field.greeting}); -%> 
                        <% } else if(field.action) { %>
                          <%- include('./components/action.ejs', field.action); -%>
                        <% } else if(field.table) { %> 
                          <%- include('./components/table.ejs', { table: field.table}); -%> 
                        <% } else if(field.social) { %> 
                          <%- include('./components/social.ejs', {social: field.social}); -%> 
                      <%} });%>
                      <% if(fallback) { %> 
                          <%- include('./components/actionFallback.ejs', { link: fallback}); -%> 
                      <% }%>
    </mj-body>

  </html>
</mjml>
